
@{
    ViewBag.Title = "CreateMultiple";
}

<h2>Create multiple</h2>

<form method="post">
    <div class="form-horizontal">
        <div>
            <label>Amount</label>
            @Html.TextBox("Amount", null, new { @class = "span1", type = "number", required = "required", min = 1, max = 1000000 })
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <button value="CreateMultiple" type="submit"
                    class="btn btn-success">
                Create
            </button>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}