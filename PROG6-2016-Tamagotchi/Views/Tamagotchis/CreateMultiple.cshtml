
@{
    ViewBag.Title = "CreateMultiple";
}

<h2 style="background-color: #d5ddea; padding:10px;">Create multiple</h2>

<form method="post">
    <div class="form-horizontal"  style="background-color: #d5ddea; padding:10px;">
        <div>
            <label  style="background-color: #d5ddea; padding:10px;">Amount</label>
            @Html.TextBox("Amount", null, new { @class = "span1", type = "number", required = "required", min = 1, max = 100 })
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <button value="CreateMultiple" type="submit"
                    class="btn btn-success">
                Create
            </button>
        </div>
    </div>
</form>

<div  style="background-color: #d5ddea; padding:10px;">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}